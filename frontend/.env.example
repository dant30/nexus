# Frontend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Deriv Configuration
VITE_DERIV_APP_ID=your_deriv_app_id_here
VITE_DERIV_REDIRECT_URL=http://localhost:5173/oauth/callback

# Environment
VITE_ENVIRONMENT=development
VITE_DEBUG=true

# Feature Flags
VITE_ENABLE_CHARTS=true
VITE_ENABLE_AFFILIATE=true
VITE_ENABLE_REAL_ACCOUNTS=true

# Affiliate Configuration (dangote_fx)
VITE_DEFAULT_AFFILIATE_CODE=dangote_fx
