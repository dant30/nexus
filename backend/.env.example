# ============================================================================
# NEXUS TRADING BOT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this to .env and update with real values

# ============================================================================
# DJANGO & FASTAPI
# ============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_trading_bot
# For production:
# DATABASE_URL=postgresql://user:password@prod-db-host.com:5432/nexus_prod

# ============================================================================
# REDIS (Caching & Celery)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
# For production with password:
# REDIS_URL=redis://:password@redis-host.com:6379/0

# ============================================================================
# FASTAPI & JWT
# ============================================================================
HOST=0.0.0.0
PORT=8000
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ============================================================================
# CORS (Frontend Origins)
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
# For production:
# CORS_ALLOWED_ORIGINS=https://trading.nexus.com,https://app.nexus.com

# ============================================================================
# DERIV API INTEGRATION
# ============================================================================
DERIV_APP_ID=your-deriv-app-id
DERIV_API_KEY=your-deriv-api-key
DERIV_OAUTH_CALLBACK_URL=http://localhost:3000/auth/deriv/callback
# For production:
# DERIV_OAUTH_CALLBACK_URL=https://trading.nexus.com/auth/deriv/callback

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
MIN_STAKE=0.35
MAX_STAKE=1000.00
DEFAULT_STAKE=0.35 
MIN_SIGNAL_CONFIDENCE=0.60
MAX_DAILY_LOSS=100.00

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_BACKEND=console  # Use 'console' for dev, 'smtp' for production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@nexus.com

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/nexus.log

# ============================================================================
# CELERY (Async Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# SENTRY (Error Tracking) - Optional
# ============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456

# ============================================================================
# NEW RELIC (Performance Monitoring) - Optional
# ============================================================================
# NEW_RELIC_CONFIG_FILE=newrelic.ini
# NEW_RELIC_ENVIRONMENT=production
